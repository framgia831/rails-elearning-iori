<div class="container container-small">
	<h2>Categories</h2>
	<div class="row object-list">
		<% @categories.each do |category| %>
		<div class="col-sm-6">
			<section class= "col-sm-12">
				<div class="detail">
					<h2><%= category.title %></h2>
					<p><%= category.description %></p>
				</div>
				
				<div class="btn-wrapper text-right">
					<% if lesson = current_user.lessons.find_by(category_id: category.id) %>
						<%= link_to "Already Learn",lesson_lesson_words_path(lesson.id), class: 'btn btn-defalt' %>
					<% else %>
						<%= form_for :lesson, url: lessons_path do |f|%>
							<%= f.hidden_field :category_id, value: category.id %>
							<%= f.submit "LEARN", class: 'btn btn-primary'%>
						<% end %>
					<% end %>
				</div>
				
			</section>
		</div>
		<% end %>
	</div>
</div>

