<h3>Create Page</h3>

<%= form_for :category, url: admin_categories_path do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class:'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_field :description, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.submit class: 'btn btn-primary form-control'%>
	</div>
<% end %>